<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>

<plugin>

    <extension
            point="org.eclipse.ui.editors">
        <editor
            class="de.jpaw.bonaparte.dts.dsl.ui.BDtsExecutableExtensionFactory:org.eclipse.xtext.ui.editor.XtextEditor"
            contributorClass="org.eclipse.ui.editors.text.TextEditorActionContributor"
            default="true"
            extensions="dts"
            id="de.jpaw.bonaparte.dts.BDts"
            name="BDts Editor">
        </editor>
    </extension>
    <extension
        point="org.eclipse.ui.handlers">
        <handler
            class="de.jpaw.bonaparte.dts.dsl.ui.BDtsExecutableExtensionFactory:org.eclipse.xtext.ui.editor.hyperlinking.OpenDeclarationHandler"
            commandId="org.eclipse.xtext.ui.editor.hyperlinking.OpenDeclaration">
            <activeWhen>
                <reference
                    definitionId="de.jpaw.bonaparte.dts.BDts.Editor.opened">
                </reference>
            </activeWhen>
        </handler>
        <handler
            class="de.jpaw.bonaparte.dts.dsl.ui.BDtsExecutableExtensionFactory:org.eclipse.xtext.ui.editor.handler.ValidateActionHandler"
            commandId="de.jpaw.bonaparte.dts.BDts.validate">
         <activeWhen>
            <reference
                    definitionId="de.jpaw.bonaparte.dts.BDts.Editor.opened">
            </reference>
         </activeWhen>
        </handler>
        <!-- copy qualified name -->
        <handler
            class="de.jpaw.bonaparte.dts.dsl.ui.BDtsExecutableExtensionFactory:org.eclipse.xtext.ui.editor.copyqualifiedname.EditorCopyQualifiedNameHandler"
            commandId="org.eclipse.xtext.ui.editor.copyqualifiedname.EditorCopyQualifiedName">
            <activeWhen>
                <reference definitionId="de.jpaw.bonaparte.dts.BDts.Editor.opened" />
            </activeWhen>
        </handler>
        <handler
            class="de.jpaw.bonaparte.dts.dsl.ui.BDtsExecutableExtensionFactory:org.eclipse.xtext.ui.editor.copyqualifiedname.OutlineCopyQualifiedNameHandler"
            commandId="org.eclipse.xtext.ui.editor.copyqualifiedname.OutlineCopyQualifiedName">
            <activeWhen>
                <and>
                    <reference definitionId="de.jpaw.bonaparte.dts.BDts.XtextEditor.opened" />
                    <iterate>
                        <adapt type="org.eclipse.xtext.ui.editor.outline.IOutlineNode" />
                    </iterate>
                </and>
            </activeWhen>
        </handler>
    </extension>
    <extension point="org.eclipse.core.expressions.definitions">
        <definition id="de.jpaw.bonaparte.dts.BDts.Editor.opened">
            <and>
                <reference definitionId="isActiveEditorAnInstanceOfXtextEditor"/>
                <with variable="activeEditor">
                    <test property="org.eclipse.xtext.ui.editor.XtextEditor.languageName"
                        value="de.jpaw.bonaparte.dts.BDts"
                        forcePluginActivation="true"/>
                </with>
            </and>
        </definition>
        <definition id="de.jpaw.bonaparte.dts.BDts.XtextEditor.opened">
            <and>
                <reference definitionId="isXtextEditorActive"/>
                <with variable="activeEditor">
                    <test property="org.eclipse.xtext.ui.editor.XtextEditor.languageName"
                        value="de.jpaw.bonaparte.dts.BDts"
                        forcePluginActivation="true"/>
                </with>
            </and>
        </definition>
    </extension>
    <extension
            point="org.eclipse.ui.preferencePages">
        <page
            class="de.jpaw.bonaparte.dts.dsl.ui.BDtsExecutableExtensionFactory:org.eclipse.xtext.ui.editor.preferences.LanguageRootPreferencePage"
            id="de.jpaw.bonaparte.dts.BDts"
            name="BDts">
            <keywordReference id="de.jpaw.bonaparte.dts.dsl.ui.keyword_BDts"/>
        </page>
        <page
            category="de.jpaw.bonaparte.dts.BDts"
            class="de.jpaw.bonaparte.dts.dsl.ui.BDtsExecutableExtensionFactory:org.eclipse.xtext.ui.editor.syntaxcoloring.SyntaxColoringPreferencePage"
            id="de.jpaw.bonaparte.dts.BDts.coloring"
            name="Syntax Coloring">
            <keywordReference id="de.jpaw.bonaparte.dts.dsl.ui.keyword_BDts"/>
        </page>
        <page
            category="de.jpaw.bonaparte.dts.BDts"
            class="de.jpaw.bonaparte.dts.dsl.ui.BDtsExecutableExtensionFactory:org.eclipse.xtext.ui.editor.templates.XtextTemplatePreferencePage"
            id="de.jpaw.bonaparte.dts.BDts.templates"
            name="Templates">
            <keywordReference id="de.jpaw.bonaparte.dts.dsl.ui.keyword_BDts"/>
        </page>
    </extension>
    <extension
            point="org.eclipse.ui.propertyPages">
        <page
            class="de.jpaw.bonaparte.dts.dsl.ui.BDtsExecutableExtensionFactory:org.eclipse.xtext.ui.editor.preferences.LanguageRootPreferencePage"
            id="de.jpaw.bonaparte.dts.BDts"
            name="BDts">
            <keywordReference id="de.jpaw.bonaparte.dts.dsl.ui.keyword_BDts"/>
            <enabledWhen>
                <adapt type="org.eclipse.core.resources.IProject"/>
            </enabledWhen>
            <filter name="projectNature" value="org.eclipse.xtext.ui.shared.xtextNature"/>
        </page>
    </extension>
    <extension
        point="org.eclipse.ui.keywords">
        <keyword
            id="de.jpaw.bonaparte.dts.dsl.ui.keyword_BDts"
            label="BDts"/>
    </extension>
    <extension
         point="org.eclipse.ui.commands">
      <command
            description="Trigger expensive validation"
            id="de.jpaw.bonaparte.dts.BDts.validate"
            name="Validate">
      </command>
      <!-- copy qualified name -->
      <command
            id="org.eclipse.xtext.ui.editor.copyqualifiedname.EditorCopyQualifiedName"
            categoryId="org.eclipse.ui.category.edit"
            description="Copy the qualified name for the selected element"
            name="Copy Qualified Name">
      </command>
      <command
            id="org.eclipse.xtext.ui.editor.copyqualifiedname.OutlineCopyQualifiedName"
            categoryId="org.eclipse.ui.category.edit"
            description="Copy the qualified name for the selected element"
            name="Copy Qualified Name">
      </command>
    </extension>
    <extension point="org.eclipse.ui.menus">
        <menuContribution
            locationURI="popup:#TextEditorContext?after=group.edit">
             <command
                 commandId="de.jpaw.bonaparte.dts.BDts.validate"
                 style="push"
                 tooltip="Trigger expensive validation">
            <visibleWhen checkEnabled="false">
                <reference
                    definitionId="de.jpaw.bonaparte.dts.BDts.Editor.opened">
                </reference>
            </visibleWhen>
         </command>
         </menuContribution>
         <!-- copy qualified name -->
         <menuContribution locationURI="popup:#TextEditorContext?after=copy">
            <command commandId="org.eclipse.xtext.ui.editor.copyqualifiedname.EditorCopyQualifiedName"
                style="push" tooltip="Copy Qualified Name">
                <visibleWhen checkEnabled="false">
                    <reference definitionId="de.jpaw.bonaparte.dts.BDts.Editor.opened" />
                </visibleWhen>
            </command>
         </menuContribution>
         <menuContribution locationURI="menu:edit?after=copy">
            <command commandId="org.eclipse.xtext.ui.editor.copyqualifiedname.EditorCopyQualifiedName"
                style="push" tooltip="Copy Qualified Name">
                <visibleWhen checkEnabled="false">
                    <reference definitionId="de.jpaw.bonaparte.dts.BDts.Editor.opened" />
                </visibleWhen>
            </command>
         </menuContribution>
         <menuContribution locationURI="popup:org.eclipse.xtext.ui.outline?after=additions">
            <command commandId="org.eclipse.xtext.ui.editor.copyqualifiedname.OutlineCopyQualifiedName"
                style="push" tooltip="Copy Qualified Name">
                <visibleWhen checkEnabled="false">
                    <and>
                        <reference definitionId="de.jpaw.bonaparte.dts.BDts.XtextEditor.opened" />
                        <iterate>
                            <adapt type="org.eclipse.xtext.ui.editor.outline.IOutlineNode" />
                        </iterate>
                    </and>
                </visibleWhen>
            </command>
         </menuContribution>
    </extension>
    <extension point="org.eclipse.ui.menus">
        <menuContribution locationURI="popup:#TextEditorContext?endof=group.find">
            <command commandId="org.eclipse.xtext.ui.editor.FindReferences">
                <visibleWhen checkEnabled="false">
                    <reference definitionId="de.jpaw.bonaparte.dts.BDts.Editor.opened">
                    </reference>
                </visibleWhen>
            </command>
        </menuContribution>
    </extension>
    <extension point="org.eclipse.ui.handlers">
        <handler
            class="de.jpaw.bonaparte.dts.dsl.ui.BDtsExecutableExtensionFactory:org.eclipse.xtext.ui.editor.findrefs.FindReferencesHandler"
            commandId="org.eclipse.xtext.ui.editor.FindReferences">
            <activeWhen>
                <reference
                    definitionId="de.jpaw.bonaparte.dts.BDts.Editor.opened">
                </reference>
            </activeWhen>
        </handler>
    </extension>

<!-- adding resource factories -->

    <extension
        point="org.eclipse.emf.ecore.extension_parser">
        <parser
            class="de.jpaw.bonaparte.dts.dsl.ui.BDtsExecutableExtensionFactory:org.eclipse.xtext.resource.IResourceFactory"
            type="ned">
        </parser>
    </extension>
    <extension point="org.eclipse.xtext.extension_resourceServiceProvider">
        <resourceServiceProvider
            class="de.jpaw.bonaparte.dts.dsl.ui.BDtsExecutableExtensionFactory:org.eclipse.xtext.ui.resource.IResourceUIServiceProvider"
            uriExtension="dts">
        </resourceServiceProvider>
    </extension>


    <!-- marker definitions for de.jpaw.bonaparte.dts.BDts -->
    <extension
            id="bdts.check.fast"
            name="BDts Problem"
            point="org.eclipse.core.resources.markers">
        <super type="org.eclipse.xtext.ui.check.fast"/>
        <persistent value="true"/>
    </extension>
    <extension
            id="bdts.check.normal"
            name="BDts Problem"
            point="org.eclipse.core.resources.markers">
        <super type="org.eclipse.xtext.ui.check.normal"/>
        <persistent value="true"/>
    </extension>
    <extension
            id="bdts.check.expensive"
            name="BDts Problem"
            point="org.eclipse.core.resources.markers">
        <super type="org.eclipse.xtext.ui.check.expensive"/>
        <persistent value="true"/>
    </extension>

   <extension
         point="org.eclipse.xtext.builder.participant">
      <participant
            class="de.jpaw.bonaparte.dts.dsl.ui.BDtsExecutableExtensionFactory:org.eclipse.xtext.builder.IXtextBuilderParticipant"
            fileExtensions="dts"
            >
      </participant>
   </extension>
   <extension
            point="org.eclipse.ui.preferencePages">
        <page
            category="de.jpaw.bonaparte.dts.BDts"
            class="de.jpaw.bonaparte.dts.dsl.ui.BDtsExecutableExtensionFactory:org.eclipse.xtext.builder.preferences.BuilderPreferencePage"
            id="de.jpaw.bonaparte.dts.BDts.compiler.preferencePage"
            name="Compiler">
            <keywordReference id="de.jpaw.bonaparte.dts.dsl.ui.keyword_BDts"/>
        </page>
    </extension>
    <extension
            point="org.eclipse.ui.propertyPages">
        <page
            category="de.jpaw.bonaparte.dts.BDts"
            class="de.jpaw.bonaparte.dts.dsl.ui.BDtsExecutableExtensionFactory:org.eclipse.xtext.builder.preferences.BuilderPreferencePage"
            id="de.jpaw.bonaparte.dts.BDts.compiler.propertyPage"
            name="Compiler">
            <keywordReference id="de.jpaw.bonaparte.dts.dsl.ui.keyword_BDts"/>
            <enabledWhen>
                <adapt type="org.eclipse.core.resources.IProject"/>
            </enabledWhen>
            <filter name="projectNature" value="org.eclipse.xtext.ui.shared.xtextNature"/>
        </page>
    </extension>

    <!-- Quick Outline -->
    <extension
        point="org.eclipse.ui.handlers">
        <handler
            class="de.jpaw.bonaparte.dts.dsl.ui.BDtsExecutableExtensionFactory:org.eclipse.xtext.ui.editor.outline.quickoutline.ShowQuickOutlineActionHandler"
            commandId="org.eclipse.xtext.ui.editor.outline.QuickOutline">
            <activeWhen>
                <reference
                    definitionId="de.jpaw.bonaparte.dts.BDts.Editor.opened">
                </reference>
            </activeWhen>
        </handler>
    </extension>
    <extension
        point="org.eclipse.ui.commands">
        <command
            description="Open the quick outline."
            id="org.eclipse.xtext.ui.editor.outline.QuickOutline"
            name="Quick Outline">
        </command>
    </extension>
    <extension point="org.eclipse.ui.menus">
        <menuContribution
            locationURI="popup:#TextEditorContext?after=group.open">
            <command commandId="org.eclipse.xtext.ui.editor.outline.QuickOutline"
                style="push"
                tooltip="Open Quick Outline">
                <visibleWhen checkEnabled="false">
                    <reference definitionId="de.jpaw.bonaparte.dts.BDts.Editor.opened"/>
                </visibleWhen>
            </command>
        </menuContribution>
    </extension>
    <!-- quickfix marker resolution generator for de.jpaw.bonaparte.dts.BDts -->
    <extension
            point="org.eclipse.ui.ide.markerResolution">
        <markerResolutionGenerator
            class="de.jpaw.bonaparte.dts.dsl.ui.BDtsExecutableExtensionFactory:org.eclipse.xtext.ui.editor.quickfix.MarkerResolutionGenerator"
            markerType="de.jpaw.bonaparte.dts.dsl.ui.bdts.check.fast">
            <attribute
                name="FIXABLE_KEY"
                value="true">
            </attribute>
        </markerResolutionGenerator>
        <markerResolutionGenerator
            class="de.jpaw.bonaparte.dts.dsl.ui.BDtsExecutableExtensionFactory:org.eclipse.xtext.ui.editor.quickfix.MarkerResolutionGenerator"
            markerType="de.jpaw.bonaparte.dts.dsl.ui.bdts.check.normal">
            <attribute
                name="FIXABLE_KEY"
                value="true">
            </attribute>
        </markerResolutionGenerator>
        <markerResolutionGenerator
            class="de.jpaw.bonaparte.dts.dsl.ui.BDtsExecutableExtensionFactory:org.eclipse.xtext.ui.editor.quickfix.MarkerResolutionGenerator"
            markerType="de.jpaw.bonaparte.dts.dsl.ui.bdts.check.expensive">
            <attribute
                name="FIXABLE_KEY"
                value="true">
            </attribute>
        </markerResolutionGenerator>
    </extension>
    <!-- Rename Refactoring -->
    <extension point="org.eclipse.ui.handlers">
        <handler
            class="de.jpaw.bonaparte.dts.dsl.ui.BDtsExecutableExtensionFactory:org.eclipse.xtext.ui.refactoring.ui.DefaultRenameElementHandler"
            commandId="org.eclipse.xtext.ui.refactoring.RenameElement">
            <activeWhen>
                <reference
                    definitionId="de.jpaw.bonaparte.dts.BDts.Editor.opened">
                </reference>
            </activeWhen>
        </handler>
    </extension>
    <extension point="org.eclipse.ui.menus">
         <menuContribution
            locationURI="popup:#TextEditorContext?after=group.edit">
         <command commandId="org.eclipse.xtext.ui.refactoring.RenameElement"
               style="push">
            <visibleWhen checkEnabled="false">
               <reference
                     definitionId="de.jpaw.bonaparte.dts.BDts.Editor.opened">
               </reference>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension point="org.eclipse.ui.preferencePages">
        <page
            category="de.jpaw.bonaparte.dts.BDts"
            class="de.jpaw.bonaparte.dts.dsl.ui.BDtsExecutableExtensionFactory:org.eclipse.xtext.ui.refactoring.ui.RefactoringPreferencePage"
            id="de.jpaw.bonaparte.dts.BDts.refactoring"
            name="Refactoring">
            <keywordReference id="de.jpaw.bonaparte.dts.dsl.ui.keyword_BDts"/>
        </page>
    </extension>

  <extension point="org.eclipse.compare.contentViewers">
    <viewer id="de.jpaw.bonaparte.dts.BDts.compare.contentViewers"
            class="de.jpaw.bonaparte.dts.dsl.ui.BDtsExecutableExtensionFactory:org.eclipse.xtext.ui.compare.InjectableViewerCreator"
            extensions="dts">
    </viewer>
  </extension>
  <extension point="org.eclipse.compare.contentMergeViewers">
    <viewer id="de.jpaw.bonaparte.dts.BDts.compare.contentMergeViewers"
            class="de.jpaw.bonaparte.dts.dsl.ui.BDtsExecutableExtensionFactory:org.eclipse.xtext.ui.compare.InjectableViewerCreator"
            extensions="dts" label="BDts Compare">
     </viewer>
  </extension>
  <extension point="org.eclipse.ui.editors.documentProviders">
    <provider id="de.jpaw.bonaparte.dts.BDts.editors.documentProviders"
            class="de.jpaw.bonaparte.dts.dsl.ui.BDtsExecutableExtensionFactory:org.eclipse.xtext.ui.editor.model.XtextDocumentProvider"
            extensions="dts">
    </provider>
  </extension>

</plugin>

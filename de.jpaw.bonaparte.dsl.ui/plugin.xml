<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>

<plugin>

    <extension
            point="org.eclipse.ui.editors">
        <editor
            class="de.jpaw.bonaparte.dsl.ui.BonScriptExecutableExtensionFactory:org.eclipse.xtext.ui.editor.XtextEditor"
            contributorClass="org.eclipse.ui.editors.text.TextEditorActionContributor"
            default="true"
            extensions="bon"
            id="de.jpaw.bonaparte.dsl.BonScript"
            name="BonScript Editor">
        </editor>
    </extension>
    <extension
        point="org.eclipse.ui.handlers">
        <handler
            class="de.jpaw.bonaparte.dsl.ui.BonScriptExecutableExtensionFactory:org.eclipse.xtext.ui.editor.hyperlinking.OpenDeclarationHandler"
            commandId="org.eclipse.xtext.ui.editor.hyperlinking.OpenDeclaration">
            <activeWhen>
                <reference
                    definitionId="de.jpaw.bonaparte.dsl.BonScript.Editor.opened">
                </reference>
            </activeWhen>
        </handler>
        <handler
            class="de.jpaw.bonaparte.dsl.ui.BonScriptExecutableExtensionFactory:org.eclipse.xtext.ui.editor.handler.ValidateActionHandler"
            commandId="de.jpaw.bonaparte.dsl.BonScript.validate">
         <activeWhen>
            <reference
                    definitionId="de.jpaw.bonaparte.dsl.BonScript.Editor.opened">
            </reference>
         </activeWhen>
      </handler>
    </extension>
    <extension point="org.eclipse.core.expressions.definitions">
        <definition id="de.jpaw.bonaparte.dsl.BonScript.Editor.opened">
            <and>
                <reference definitionId="isActiveEditorAnInstanceOfXtextEditor"/>
                <with variable="activeEditor">
                    <test property="org.eclipse.xtext.ui.editor.XtextEditor.languageName" 
                        value="de.jpaw.bonaparte.dsl.BonScript" 
                        forcePluginActivation="true"/>
                </with>        
            </and>
        </definition>
    </extension>
    <extension
            point="org.eclipse.ui.preferencePages">
        <page
            class="de.jpaw.bonaparte.dsl.ui.BonScriptExecutableExtensionFactory:de.jpaw.bonaparte.dsl.ui.BonScriptConfiguration"
            id="de.jpaw.bonaparte.dsl.BonScript"
            name="BonScript">
            <keywordReference id="de.jpaw.bonaparte.dsl.ui.keyword_BonScript"/>
        </page>
        <page
            category="de.jpaw.bonaparte.dsl.BonScript"
            class="de.jpaw.bonaparte.dsl.ui.BonScriptExecutableExtensionFactory:org.eclipse.xtext.ui.editor.syntaxcoloring.SyntaxColoringPreferencePage"
            id="de.jpaw.bonaparte.dsl.BonScript.coloring"
            name="Syntax Coloring">
            <keywordReference id="de.jpaw.bonaparte.dsl.ui.keyword_BonScript"/>
        </page>
        <page
            category="de.jpaw.bonaparte.dsl.BonScript"
            class="de.jpaw.bonaparte.dsl.ui.BonScriptExecutableExtensionFactory:org.eclipse.xtext.ui.editor.templates.XtextTemplatePreferencePage"
            id="de.jpaw.bonaparte.dsl.BonScript.templates"
            name="Templates">
            <keywordReference id="de.jpaw.bonaparte.dsl.ui.keyword_BonScript"/>
        </page>
    </extension>
    <extension
            point="org.eclipse.ui.propertyPages">
        <page
            class="de.jpaw.bonaparte.dsl.ui.BonScriptExecutableExtensionFactory:de.jpaw.bonaparte.dsl.ui.BonScriptConfiguration"
            id="de.jpaw.bonaparte.dsl.BonScript"
            name="BonScript">
            <keywordReference id="de.jpaw.bonaparte.dsl.ui.keyword_BonScript"/>
            <enabledWhen>
                <adapt type="org.eclipse.core.resources.IProject"/>
            </enabledWhen>
            <filter name="projectNature" value="org.eclipse.xtext.ui.shared.xtextNature"/>
        </page>
    </extension>
    <extension
        point="org.eclipse.ui.keywords">
        <keyword
            id="de.jpaw.bonaparte.dsl.ui.keyword_BonScript"
            label="BonScript"/>
    </extension>
    <extension
         point="org.eclipse.ui.commands">
      <command
            description="Trigger expensive validation"
            id="de.jpaw.bonaparte.dsl.BonScript.validate"
            name="Validate">
      </command>
    </extension>
    <extension point="org.eclipse.ui.menus">
        <menuContribution
            locationURI="popup:#TextEditorContext?after=group.edit">
             <command
                 commandId="de.jpaw.bonaparte.dsl.BonScript.validate"
                 style="push"
                 tooltip="Trigger expensive validation">
            <visibleWhen checkEnabled="false">
                <reference
                    definitionId="de.jpaw.bonaparte.dsl.BonScript.Editor.opened">
                </reference>
            </visibleWhen>
         </command>  
         </menuContribution>
    </extension>
    <extension point="org.eclipse.ui.menus">
        <menuContribution locationURI="popup:#TextEditorContext?endof=group.find">
            <command commandId="org.eclipse.xtext.ui.editor.FindReferences">
                <visibleWhen checkEnabled="false">
                    <reference definitionId="de.jpaw.bonaparte.dsl.BonScript.Editor.opened">
                    </reference>
                </visibleWhen>
            </command>
        </menuContribution>
    </extension>
    <extension point="org.eclipse.ui.handlers">
        <handler
            class="de.jpaw.bonaparte.dsl.ui.BonScriptExecutableExtensionFactory:org.eclipse.xtext.ui.editor.findrefs.FindReferencesHandler"
            commandId="org.eclipse.xtext.ui.editor.FindReferences">
            <activeWhen>
                <reference
                    definitionId="de.jpaw.bonaparte.dsl.BonScript.Editor.opened">
                </reference>
            </activeWhen>
        </handler>
    </extension>   

<!-- adding resource factories -->

    <extension
        point="org.eclipse.emf.ecore.extension_parser">
        <parser
            class="de.jpaw.bonaparte.dsl.ui.BonScriptExecutableExtensionFactory:org.eclipse.xtext.resource.IResourceFactory"
            type="bon">
        </parser>
    </extension>
    <extension point="org.eclipse.xtext.extension_resourceServiceProvider">
        <resourceServiceProvider
            class="de.jpaw.bonaparte.dsl.ui.BonScriptExecutableExtensionFactory:org.eclipse.xtext.ui.resource.IResourceUIServiceProvider"
            uriExtension="bon">
        </resourceServiceProvider>
    </extension>


    <!-- marker definitions for de.jpaw.bonaparte.dsl.BonScript -->
    <extension
            id="bonscript.check.fast"
            name="BonScript Problem"
            point="org.eclipse.core.resources.markers">
        <super type="org.eclipse.xtext.ui.check.fast"/>
        <persistent value="true"/>
    </extension>
    <extension
            id="bonscript.check.normal"
            name="BonScript Problem"
            point="org.eclipse.core.resources.markers">
        <super type="org.eclipse.xtext.ui.check.normal"/>
        <persistent value="true"/>
    </extension>
    <extension
            id="bonscript.check.expensive"
            name="BonScript Problem"
            point="org.eclipse.core.resources.markers">
        <super type="org.eclipse.xtext.ui.check.expensive"/>
        <persistent value="true"/>
    </extension>

   <extension
         point="org.eclipse.xtext.builder.participant">
      <participant
            class="de.jpaw.bonaparte.dsl.ui.BonScriptExecutableExtensionFactory:org.eclipse.xtext.builder.IXtextBuilderParticipant">
      </participant>
   </extension>
   <extension
            point="org.eclipse.ui.preferencePages">
        <page
            category="de.jpaw.bonaparte.dsl.BonScript"
            class="de.jpaw.bonaparte.dsl.ui.BonScriptExecutableExtensionFactory:org.eclipse.xtext.builder.preferences.BuilderPreferencePage"
            id="de.jpaw.bonaparte.dsl.BonScript.compiler.preferencePage"
            name="Compiler">
            <keywordReference id="de.jpaw.bonaparte.dsl.ui.keyword_BonScript"/>
        </page>
    </extension>
    <extension
            point="org.eclipse.ui.propertyPages">
        <page
            category="de.jpaw.bonaparte.dsl.BonScript"
            class="de.jpaw.bonaparte.dsl.ui.BonScriptExecutableExtensionFactory:org.eclipse.xtext.builder.preferences.BuilderPreferencePage"
            id="de.jpaw.bonaparte.dsl.BonScript.compiler.propertyPage"
            name="Compiler">
            <keywordReference id="de.jpaw.bonaparte.dsl.ui.keyword_BonScript"/>
            <enabledWhen>
                <adapt type="org.eclipse.core.resources.IProject"/>
            </enabledWhen>
            <filter name="projectNature" value="org.eclipse.xtext.ui.shared.xtextNature"/>
        </page>
    </extension>

    <!-- Quick Outline -->
    <extension
        point="org.eclipse.ui.handlers">
        <handler 
            class="de.jpaw.bonaparte.dsl.ui.BonScriptExecutableExtensionFactory:org.eclipse.xtext.ui.editor.outline.quickoutline.ShowQuickOutlineActionHandler"
            commandId="org.eclipse.xtext.ui.editor.outline.QuickOutline">
            <activeWhen>
                <reference
                    definitionId="de.jpaw.bonaparte.dsl.BonScript.Editor.opened">
                </reference>
            </activeWhen>
        </handler>
    </extension>
    <extension
        point="org.eclipse.ui.commands">
        <command
            description="Open the quick outline."
            id="org.eclipse.xtext.ui.editor.outline.QuickOutline"
            name="Quick Outline">
        </command>
    </extension>
    <extension point="org.eclipse.ui.menus">
        <menuContribution
            locationURI="popup:#TextEditorContext?after=group.open">
            <command commandId="org.eclipse.xtext.ui.editor.outline.QuickOutline"
                style="push"
                tooltip="Open Quick Outline">
                <visibleWhen checkEnabled="false">
                    <reference definitionId="de.jpaw.bonaparte.dsl.BonScript.Editor.opened"/>
                </visibleWhen>
            </command>
        </menuContribution>
    </extension>
    <!-- quickfix marker resolution generator for de.jpaw.bonaparte.dsl.BonScript -->
    <extension
            point="org.eclipse.ui.ide.markerResolution">
        <markerResolutionGenerator
            class="de.jpaw.bonaparte.dsl.ui.BonScriptExecutableExtensionFactory:org.eclipse.xtext.ui.editor.quickfix.MarkerResolutionGenerator"
            markerType="de.jpaw.bonaparte.dsl.ui.bonscript.check.fast">
            <attribute
                name="FIXABLE_KEY"
                value="true">
            </attribute>
        </markerResolutionGenerator>
        <markerResolutionGenerator
            class="de.jpaw.bonaparte.dsl.ui.BonScriptExecutableExtensionFactory:org.eclipse.xtext.ui.editor.quickfix.MarkerResolutionGenerator"
            markerType="de.jpaw.bonaparte.dsl.ui.bonscript.check.normal">
            <attribute
                name="FIXABLE_KEY"
                value="true">
            </attribute>
        </markerResolutionGenerator>
        <markerResolutionGenerator
            class="de.jpaw.bonaparte.dsl.ui.BonScriptExecutableExtensionFactory:org.eclipse.xtext.ui.editor.quickfix.MarkerResolutionGenerator"
            markerType="de.jpaw.bonaparte.dsl.ui.bonscript.check.expensive">
            <attribute
                name="FIXABLE_KEY"
                value="true">
            </attribute>
        </markerResolutionGenerator>
    </extension>
    <!-- Rename Refactoring -->
    <extension point="org.eclipse.ui.handlers">
        <handler 
            class="de.jpaw.bonaparte.dsl.ui.BonScriptExecutableExtensionFactory:org.eclipse.xtext.ui.refactoring.ui.IRenameElementHandler"
            commandId="org.eclipse.xtext.ui.refactoring.RenameElement">
            <activeWhen>
                <reference
                    definitionId="de.jpaw.bonaparte.dsl.BonScript.Editor.opened">
                </reference>
            </activeWhen>
        </handler>
    </extension>
    <extension point="org.eclipse.ui.menus">
         <menuContribution
            locationURI="popup:#TextEditorContext?after=group.edit">
         <command commandId="org.eclipse.xtext.ui.refactoring.RenameElement"
               style="push">
            <visibleWhen checkEnabled="false">
               <reference
                     definitionId="de.jpaw.bonaparte.dsl.BonScript.Editor.opened">
               </reference>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension point="org.eclipse.ui.preferencePages">
        <page
            category="de.jpaw.bonaparte.dsl.BonScript"
            class="de.jpaw.bonaparte.dsl.ui.BonScriptExecutableExtensionFactory:org.eclipse.xtext.ui.refactoring.ui.RefactoringPreferencePage"
            id="de.jpaw.bonaparte.dsl.BonScript.refactoring"
            name="Refactoring">
            <keywordReference id="de.jpaw.bonaparte.dsl.ui.keyword_BonScript"/>
        </page>
    </extension>

  <extension point="org.eclipse.compare.contentViewers">
    <viewer id="de.jpaw.bonaparte.dsl.BonScript.compare.contentViewers"
            class="de.jpaw.bonaparte.dsl.ui.BonScriptExecutableExtensionFactory:org.eclipse.xtext.ui.compare.InjectableViewerCreator"
            extensions="bon">
    </viewer>
  </extension>
  <extension point="org.eclipse.compare.contentMergeViewers">
    <viewer id="de.jpaw.bonaparte.dsl.BonScript.compare.contentMergeViewers"
            class="de.jpaw.bonaparte.dsl.ui.BonScriptExecutableExtensionFactory:org.eclipse.xtext.ui.compare.InjectableViewerCreator"
            extensions="bon" label="BonScript Compare">
     </viewer>
  </extension>
  
  <extension point="org.eclipse.ui.editors.documentProviders">
    <provider id="de.jpaw.bonaparte.dsl.BonScript.editors.documentProviders"
            class="de.jpaw.bonaparte.dsl.ui.BonScriptExecutableExtensionFactory:org.eclipse.xtext.ui.editor.model.XtextDocumentProvider"
            extensions="bon">
    </provider>
  </extension>
  
  <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            category="org.eclipse.xtext.projectwiz"
            class="de.jpaw.bonaparte.dsl.ui.BonScriptExecutableExtensionFactory:de.jpaw.bonaparte.dsl.ui.wizard.BonScriptNewProjectWizard"
            id="de.jpaw.bonaparte.dsl.ui.wizard.BonScriptNewProjectWizard"
            name="BonScript Project"
            project="true">
      </wizard>
   </extension>
</plugin>
